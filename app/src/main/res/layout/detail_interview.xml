<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

	<!--　アイコンはここに入れる！参考は入力の方のxml　-->
	<com.beardedhen.androidbootstrap.FontAwesomeText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="25dp"/>

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/medium"
		android:background="@drawable/waku"
		android:padding="@dimen/medium">

		<TextView
			android:id="@+id/detail_interview_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/medium"
			android:textColor="#000"
			android:textSize="@dimen/large_text"/>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="日程"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_interview_date"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>
		</TableRow>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="時間"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_interview_time"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>
		</TableRow>

		<TableRow
			android:id="@+id/interview_place_row"
			android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="場所"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_interview_place"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>
		</TableRow>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="服装"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_interview_clothes"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>
		</TableRow>

		<TableRow
			android:id="@+id/interview_person_row"
			android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="相手"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_interview_person"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>
		</TableRow>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="形式"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_interview_format"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="10"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>
		</TableRow>

	</TableLayout>

</FrameLayout>
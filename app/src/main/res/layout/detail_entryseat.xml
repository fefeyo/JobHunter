<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

	<!--　アイコンはここに入れる！参考は入力の方のxml　-->
	<com.beardedhen.androidbootstrap.FontAwesomeText
		android:layout_margin="25dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TableLayout
		android:layout_margin="@dimen/medium"
		android:padding="@dimen/medium"
		android:background="@drawable/waku"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="エントリーシート期限"
			android:padding="@dimen/medium"
			android:textColor="#000"
			android:textSize="@dimen/large_text"/>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="開始"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_entryseat_start"
				android:layout_width="0dp"
				android:textColor="#000"
				android:layout_weight="10"
				android:textSize="@dimen/medium_text"
				android:layout_height="match_parent"/>
		</TableRow>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="終了"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_entryseat_end"
				android:layout_width="0dp"
				android:textColor="#000"
				android:layout_weight="10"
				android:textSize="@dimen/medium_text"
				android:layout_height="match_parent"/>
		</TableRow>

		<TableRow android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="方法"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_entryseat_system"
				android:layout_width="0dp"
				android:textColor="#000"
				android:layout_weight="10"
				android:textSize="@dimen/medium_text"
				android:layout_height="match_parent"/>
		</TableRow>

		<TableRow
			android:id="@+id/entryseat_contains_row"
			android:layout_margin="@dimen/medium">

			<TextView
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="内容"
				android:textColor="#000"
				android:textSize="@dimen/medium_text"/>

			<TextView
				android:id="@+id/detail_entryseat_contains"
				android:layout_width="0dp"
				android:textColor="#000"
				android:layout_weight="10"
				android:textSize="@dimen/medium_text"
				android:layout_height="match_parent"/>
		</TableRow>
	</TableLayout>

</FrameLayout>